<xs:schema
        xmlns="http://noear.org/schema/weed3-mapper"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://noear.org/schema/weed3-mapper"
        elementFormDefault="qualified">
    <xs:element name="mapper">
        <xs:complexType>
            <xs:choice maxOccurs="unbounded">
                <xs:element minOccurs="0" maxOccurs="unbounded" ref="sql"/>
            </xs:choice>
            <xs:attribute name="namespace" use="required"/>
            <xs:attribute name="addService"/>
            <xs:attribute name="import"/>
            <xs:attribute name="baseMapper"/>
            <xs:attribute name="db"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="sql">
        <xs:complexType>
            <xs:choice minOccurs="0" maxOccurs="unbounded">
                <xs:element ref="if"/>
                <xs:element ref="for"/>
                <xs:element ref="trim"/>
                <xs:element ref="ref"/>
            </xs:choice>
            <xs:attribute name="id" type="xs:ID" use="required"/>
            <xs:attribute name="param"/>
            <xs:attribute name="declare"/>
            <xs:attribute name="return"/>

            <xs:attribute name="remarks"/>

            <xs:attribute name="caching"/>
            <xs:attribute name="cacheClear"/>
            <xs:attribute name="cacheTag"/>
            <xs:attribute name="usingCache"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="if">
        <xs:complexType mixed="true">
            <xs:choice minOccurs="0" maxOccurs="unbounded">
                <xs:element ref="if"/>
                <xs:element ref="for"/>
                <xs:element ref="trim"/>
                <xs:element ref="ref"/>
            </xs:choice>
            <xs:attribute name="test" use="required"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="for">
        <xs:complexType mixed="true">
            <xs:choice minOccurs="0" maxOccurs="unbounded">
                <xs:element ref="if"/>
                <xs:element ref="for"/>
                <xs:element ref="trim"/>
                <xs:element ref="ref"/>
            </xs:choice>
            <xs:attribute name="var" use="required"/>
            <xs:attribute name="items" use="required"/>
            <xs:attribute name="sep"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="trim">
        <xs:complexType mixed="true">
            <xs:choice minOccurs="0" maxOccurs="unbounded">
                <xs:element ref="if"/>
                <xs:element ref="for"/>
                <xs:element ref="trim"/>
                <xs:element ref="ref"/>
            </xs:choice>
            <xs:attribute name="trimStart"/>
            <xs:attribute name="trimEnd" />
            <xs:attribute name="prefix" />
            <xs:attribute name="suffix" />
        </xs:complexType>
    </xs:element>

    <xs:element name="ref">
        <xs:complexType mixed="true">
            <xs:attribute name="sql" type="xs:IDREF" use="required"/>
        </xs:complexType>
    </xs:element>

</xs:schema>
